#1 Use a SELECT statement to order the items by price.
SELECT item_name, price
FROM superstore
ORDER BY price desc;

#2 Show the MAX price of all of the items.
SELECT MAX(price) 
FROM superstore;

#3 Show the MIN price of all of the items.
SELECT MIN(price)
FROM superstore;

#4 Show the average price of all of the items.
SELECT AVG(price) 
FROM superstore;

#5 Show the max price of the items from the category "Kitchen Supplies".
SELECT MAX(price)
FROM superstore
WHERE category = "Kitchen Supplies";

#6 Order the categories based on the average price per category in descending order.
SELECT AVG(price), category
FROM superstore
GROUP BY category
ORDER BY AVG(price) desc;

#7 Show how many SMART LED Tvs are in stock. 
SELECT stock_quantity
FROM superstore
WHERE item_name = "Smart LED TV";
